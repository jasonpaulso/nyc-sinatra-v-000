<form action="/figures" method="POST">
   <label>Figure Name:<input type="text" name="figure[name]" id="figure_name"></label><br>
   
   <h3>Title:</h3>
   <ul>
   <li><label><input type="text" name="title[name]" id="new_title"></label></li>
    <%Title.all.each do |title| %>
      <li><label><input type="checkbox" name ="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%= title.name %></label></li>
    <% end %>
  </ul>
    
    <h3>Landmark:</h3>
    <ul>
    <li><label><input type="text" name="landmark[name]" id="new_landmark"></label></li>
    <%Landmark.all.each do |landmark| %>
      <li><input type="checkbox" name ="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" ><%= landmark.name %></input></label></li>
    <% end %>
    </ul>
    
    <input type="submit" value="Create New Figure">
</form

